# Environment variables override values in config/default.yaml.
# Prefix variables with DMS_ to map to configuration fields.
# For example, to raise the EAR threshold to 0.25, set:
# DMS_EAR_THRESH=0.25

# Camera source (integer index or file path)
DMS_SOURCE=0

# Frame size
DMS_WIDTH=1280
DMS_HEIGHT=720

# Performance
DMS_TARGET_FPS=30

# Thresholds
DMS_EAR_THRESH=0.23
DMS_PERCLOS_WINDOW=120
DMS_PERCLOS_THRESH=0.35
DMS_MAR_YAWN=0.65
DMS_GAZE_SECS=1.0
DMS_YAW_ABS_DEG=25
DMS_DOWN_PITCH_DEG=18

# Phone detection
DMS_ENABLE_PHONE=false
DMS_YOLO_MODEL=yolov8n.pt

# Audio
DMS_SPEAK_RATE=165
DMS_AUDIO_COOLDOWN=3.5

# Display
DMS_HEADLESS=false